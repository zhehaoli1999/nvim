{
  "clangd.path": "/usr/bin/clangd",
  "python.pythonPath": "/usr/bin/python3",
  "python.analysis.ignore": [
    "*/.git/*",
    "*/.vscode/*",
    "*/.mypy_cache/*",
    "*/.pytest_cache/*",
    "*/.tox/*",
    "*/.venv/*",
    "*/build/*",
    "*/dist/*",
    "*/site-packages/*",
    "*/__pycache__/*"],
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.variableTtrueypes": false,
  "pyright.inlayHints.parameterNames": false,
  "outline.autoPreview": true,
  "outline.previewWinblend": 10,
  "outline.followCursor": true,
  "clangd.arguments": ["--header-insertion=never", "--clang-tidy"],
}
